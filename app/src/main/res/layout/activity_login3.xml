<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wendyp.helloworld.LoginSvtActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorBlueButton">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo"/>

                <View
                android:layout_width="match_parent"
                android:layout_height="500dp"/>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/login_form3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="32dp"
            android:paddingLeft="32dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/colorBackground"
            android:layout_alignParentBottom="true">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:textSize="16dp"
                android:singleLine="true"
                android:backgroundTint="@color/colorGrayBackgroundTint"
                android:textColor="@color/colorGrayTextColor"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_password"
                        android:singleLine="true"
                        android:textColor="@color/colorGrayTextColor"
                        android:textSize="16dp"
                        android:backgroundTint="@color/colorGrayBackgroundTint"
                        android:inputType="textPassword"/>

                    <ImageButton
                        android:id="@+id/password_hint"
                        android:layout_width="21dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="15dp"
                        android:src="@drawable/hint"
                        android:clickable="true"
                        android:background="@color/colorBackground"
                        android:scaleType="fitXY"/>
                </RelativeLayout>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Forgot Password"
                    android:textSize="12dp"
                    android:textColor="@color/colorSoftBlue"
                    android:clickable="true"/>

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="LOGIN"
                    android:textSize="18dp"
                    android:textColor="@color/colorBlueButton"
                    android:background="?android:attr/selectableItemBackground"/>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>





</LinearLayout>
